{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main-window"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-set-always-on-top",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$APPLOCALDATA/settings/language.txt" },
        { "path": "$APPLOCALDATA/settings/theme.txt" }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$APPLOCALDATA/settings/language.txt" },
        { "path": "$APPLOCALDATA/settings/theme.txt" }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPLOCALDATA/settings" },
        { "path": "$APPLOCALDATA/settings/**" }
      ]
    }
  ]
}
